<!-- button_background.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <corners android:radius="8dp" />
    <solid android:color="#787878" /> <!-- Change color to red -->
    <padding
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp" />
    <stroke
        android:width="1dp"
        android:color="#355E3B" /> <!-- Optional: You can add a stroke for better distinction -->
</shape>
